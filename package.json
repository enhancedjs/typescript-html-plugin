{
  "name": "@enhancedjs/typescript-html-plugin",
  "version": "0.0.2",
  "description": "TypeScript language service plugin that adds IntelliSense for html and handledom tagged templates",
  "keywords": [
    "TypeScript",
    "html",
    "literal html",
    "templates",
    "handledom"
  ],
  "main": "lib/index.js",
  "author": "Microsoft",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/typescript-html-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/typescript-html-plugin/issues"
  },
  "dependencies": {
    "@enhancedjs/typescript-css-plugin": "^0.0.2",
    "typescript-template-language-service-decorator": "^2.2.0",
    "vscode-html-languageservice": "^3.0.3",
    "vscode-languageserver-types": "^3.15.1"
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@types/node": "^10.17.26",
    "chai": "^4.1.2",
    "glob": "^7.1.3",
    "mocha": "^8.0.1",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5"
  },
  "scripts": {
    "prepublishOnly": "npm run compile",
    "compile": "./node_modules/.bin/tsc -p .",
    "watch:compile": "./node_modules/.bin/tsc --watch -p .",
    "e2e": "./node_modules/.bin/mocha e2e/tests --slow 2000 --timeout 10000",
    "lint": "./node_modules/.bin/tslint -c tslint.json -p tsconfig.json"
  }
}
